<AdicionarVendedorPage>:

    # Fundo do layout
    FloatLayout:
        canvas: 
            Rectangle:
                size: self.size
                pos: self.pos
                source:"icones/bg1.png"


        # Texto de ID da tela de ajustes
        Label:
            pos_hint: {"right":0.85, "top":0.95}
            size_hint: 0.7, 0.2
            bold: True
            text: "Adicionar vendedor page"


        # Botao de voltar
        FloatLayout:
            pos_hint: {"right":1, "top":0.1}
            size_hint: 1, 0.1
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right":0.2, "top":0.9}
                size_hint: 0.2, 0.8
                source: "icones/voltar.png"
                on_release: app.mudar_tela("ajustespage")